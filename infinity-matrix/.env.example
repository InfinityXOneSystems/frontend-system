# Environment variables template for Infinity Matrix
# Copy this file to .env and fill in your values

# Application
APP_NAME=infinity-matrix
APP_ENV=development
DEBUG=true

# API Gateway
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Security
SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/infinity_matrix
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Redis Cache
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=10

# Google Cloud
GCP_PROJECT_ID=your-project-id
GCP_REGION=us-central1
GCP_CREDENTIALS_PATH=/path/to/credentials.json

# Vertex AI
VERTEX_AI_LOCATION=us-central1

# Firebase
FIREBASE_PROJECT_ID=your-firebase-project
FIREBASE_CREDENTIALS_PATH=/path/to/firebase-credentials.json

# Hostinger
HOSTINGER_API_KEY=your-hostinger-api-key
HOSTINGER_DOMAIN=example.com

# Google Workspace
WORKSPACE_CREDENTIALS_PATH=/path/to/workspace-credentials.json
WORKSPACE_USER_EMAIL=admin@example.com

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# Task Queue
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
